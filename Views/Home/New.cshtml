@model Dish

@{
    ViewData["Title"] = "New Dish";
}

<h2>Add a new Dish!</h2>
<a href="/" class="btn btn-success">Home</a>

<form asp-action="Create" method="POST" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name">Name of Dish</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Chef"></span><br>
        <label asp-for="Chef">Chef's Name</label>
        <input asp-for="Chef" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span><br>
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness" class="form-control">
            <option></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span><br>
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span><br>
        <label asp-for="Description">Description (optional)</label>
        <input asp-for="Description" class="form-control">
    </div>
    <div>
        <input type="submit" value="Add Dish" class="btn btn-lg btn-primary">
    </div>
</form>